#!/usr/bin/env python


def options(opt):
    pass


def configure(conf):
    pass


def build(bld):
    bld(features='fc fcprogram',
        source='normal_calls.f90',
        target='normal_calls',
        use='benchmark')

    bld(features='fc fcprogram',
        source='array_calls.f90',
        target='array_calls',
        use='benchmark')

    bld(features='fc fcprogram',
        source='linkedlist_calls.f90',
        target='linkedlist_calls',
        use='benchmark')

